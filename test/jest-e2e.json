{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "rootDir": "..",

  "moduleFileExtensions": ["ts", "js", "json"],

  "testMatch": ["**/*.e2e-spec.ts"],
  "setupFiles": ["<rootDir>/test/setup-e2e.ts"],

  "transform": {
    "^.+\\.ts$": "ts-jest"
  },

  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },

  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.json"
    }
  }
}
